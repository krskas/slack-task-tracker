{
  "name": "slack-task-tracker",
  "version": "1.0.0",
  "description": "A Slack bot for tracking tasks using reactions",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@slack/bolt": "^4.2.0",
    "dotenv": "^16.3.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/connect": "^3.4.38",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^20.17.16",
    "@types/sqlite3": "^3.1.11",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "author": "Marius Krasauskas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vividbro/slack-task-tracker.git"
  },
  "keywords": [
    "slack",
    "bot",
    "task-management",
    "workflow",
    "emoji",
    "reactions"
  ]
}
